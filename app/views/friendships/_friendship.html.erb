<% if friend %>
    <tr>
        <th scope="row"><%= friend.first_name %></th>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%=link_to "Remove", friendship_path(friend), method: :delete, class: "btn btn-warning", data:{confirm: "Are you sure?"}%></td>
    </tr>
<% end %>
