<% if stock %>
    <tr>
        <th scope="row"><%= stock.ticker %></th>
        <td><%= stock.name %></td>
        <td><%= stock.last_price %></td>
        <td><%= link_to "Remove", user_stock_path(stock), method: :delete, class: "btn btn-danger", data:{confirm: "Are you sure?"}%></td>
    </tr>
<% end %>
