<h1>My Portfolio</h1>
<div class="mt-5">
    <h2 class="text-center">Search Stocks</h2>
    <%= form_with url:"search_stock", method: :get, id: "searchStock", class:"row d-flex justify-content-center" do |f| %>
    <div class="col-md-6">
        <div class="input-group">
            <%= f.text_field :ticker, class: "form-control form-control-lg", placeholder: "Ticker symbol for company" %>
            <%= image_submit_tag "search.svg", class: "btn btn-primary rounded-end"%>
        </div>
    </div>
    <% end %>
</div>
<div class="container d-flex flex-column align-items-center" id="result">
</div>

<table class="table-dark table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First</th>
      <th scope="col">Last</th>
      <th scope="col">Handle</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td>Mark</td>
      <td>Otto</td>
      <td>@mdo</td>
    </tr>
    <tr>
      <th scope="row">2</th>
      <td>Jacob</td>
      <td>Thornton</td>
      <td>@fat</td>
    </tr>
    <tr>
      <th scope="row">3</th>
      <td colspan="2">Larry the Bird</td>
      <td>@twitter</td>
    </tr>
  </tbody>
</table>

